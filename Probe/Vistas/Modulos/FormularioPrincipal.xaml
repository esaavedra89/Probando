                        <Label 
                            Text="Ubicación cliente"
                            FontSize="20"
                            FontAttributes="Bold"
                            HorizontalOptions="Center"
                            Margin="0,15,0,15"/>
                        <StackLayout 
                            Orientation="Horizontal">
                            <Button
                                Command="{Binding ObtenerUbicacionCommand}"
                                FontSize="Medium"
                                HorizontalOptions="StartAndExpand" 
                                IsEnabled="{Binding ModoLectura}"
                                Text="Obtener ubicación"/>
                            <Button
                                BackgroundColor="White"
                                Command="{Binding OpenMapCommand}"
                                HeightRequest="15"
                                ImageSource="ic_location_on_red"/>
                        </StackLayout>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Label
                                Grid.Row="0"
                                Grid.Column="0"
                                FontSize="Medium"
                                HorizontalOptions="FillAndExpand"
                                Text="Latitud"/>
                            <Label
                                Grid.Row="0"
                                Grid.Column="1"
                                FontSize="Medium"
                                HorizontalOptions="FillAndExpand"
                                Text="Longitud"/>
                            <Entry
                                Grid.Row="1"
                                Grid.Column="0"
                                IsEnabled="False"
                                FontSize="Medium"
                                HorizontalOptions="FillAndExpand" 
                                Placeholder="Latitud"
                                Text="{Binding Latitud}"/>
                            <Entry
                                Grid.Row="1"
                                Grid.Column="1"
                                IsEnabled="False"
                                FontSize="Medium"
                                HorizontalOptions="FillAndExpand" 
                                Placeholder="Longitud"
                                Text="{Binding Longitud}"/>
                        </Grid>
                    </StackLayout>
                    
                    <Button
                        Command="{Binding AcualizarCommand}"
                        FontSize="Medium"
                        HorizontalOptions="FillAndExpand"
                        IsEnabled="{Binding ModoLectura}"
                        Margin="0,20,0,0"
                        Text="Actualizar"/>
                </StackLayout>
            </ScrollView>
            <StackLayout
                AbsoluteLayout.LayoutFlags="PositionProportional"
                AbsoluteLayout.LayoutBounds="0.5,0.5,-1,-1"
                IsVisible="{Binding Busy}" 
                Padding="12"
                x:Name="busy">
                <ActivityIndicator
                    IsRunning="{Binding Busy}"/>
            </StackLayout>
        </AbsoluteLayout>
    </ContentPage.Content>
</ContentPage>